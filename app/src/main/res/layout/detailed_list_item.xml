<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="序号"
                android:id="@+id/rv_detailed_position"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/Dark" />
            <TextView
                android:text="名称"
                android:id="@+id/rv_detailed_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="@color/Dark"
                android:gravity="center_vertical" />
            <ImageView
                android:id="@+id/rv_detailed_image"
                android:src="@drawable/ic_baseline_star_border_24"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:background="@color/Dark"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="9dp"
        app:cardCornerRadius="5dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/set_date"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="截止日期"
                    android:drawableLeft="@drawable/ic_baseline_date_range_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/set_time"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="提醒时间"
                    android:drawableLeft="@drawable/ic_baseline_alarm_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/set_name"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="修改名称"
                    android:drawableLeft="@drawable/ic_baseline_settings_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/date"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="日期" />

                <TextView
                    android:id="@+id/time"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="时间"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>